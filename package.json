    "lint": "eslint --cache -c .eslintrc --ext .js ./src ./tests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/funbox/api-validator"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@funboxteam/crafter": "4.0.0",
    "jsonschema": "1.4.0",
    "rimraf": "3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.17.6",
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.10",
    "@babel/register": "7.12.10",
    "@funboxteam/eslint-config": "7.1.0",
    "core-js": "3.6.3",
    "eslint": "7.32.0",
    "mocha": "9.2.2"
  },
  "peerDependencies": {
    "core-js": "^3.6.3",
    "regenerator-runtime": "^0.13.7"
  }
